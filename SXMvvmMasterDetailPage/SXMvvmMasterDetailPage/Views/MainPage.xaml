<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SXMvvmMasterDetailPage"
             x:Class="SXMvvmMasterDetailPage.MainPage"
             xmlns:vm="clr-namespace:SXMvvmMasterDetailPage.ViewModels">

    <MasterDetailPage.BindingContext>
        <vm:MasterDetailPageViewModel/>
    </MasterDetailPage.BindingContext>

    <MasterDetailPage.Master>
        <ContentPage Title="Master">
            <StackLayout Orientation="Vertical">
                <Label Text="SXMvvm Master Detail Page" HorizontalOptions="Center" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage>

        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>